<%- model_class = TypeArchive -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tarchive_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @type_archives.each do |type_archive| %>
      <tr>
        <td><%= link_to type_archive.id, type_archive_path(type_archive) %></td>
        <td><%= type_archive.tarchive_name %></td>
        <td><%=l type_archive.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      type_archive_path(type_archive), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_type_archive_path(type_archive), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      type_archive_path(type_archive),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_type_archive_path,
            :class => 'btn btn-primary' %>
