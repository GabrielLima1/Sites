<%- model_class = Social -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:social_name) %></th>
      <th><%= model_class.human_attribute_name(:social_link) %></th>
      <th><%= model_class.human_attribute_name(:social_status) %></th>
      <th><%= model_class.human_attribute_name(:archive_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @socials.each do |social| %>
      <tr>
        <td><%= link_to social.id, social_path(social) %></td>
        <td><%= social.social_name %></td>
        <td><%= social.social_link %></td>
        <td><%= social.social_status %></td>
        <td><%= social.archive_id %></td>
        <td><%=l social.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      social_path(social), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_social_path(social), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      social_path(social),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_social_path,
            :class => 'btn btn-primary' %>
