<%- model_class = Social -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:social_name) %>:</strong></dt>
  <dd><%= @social.social_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:social_link) %>:</strong></dt>
  <dd><%= @social.social_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:social_status) %>:</strong></dt>
  <dd><%= @social.social_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:archive_id) %>:</strong></dt>
  <dd><%= @social.archive_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              socials_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_social_path(@social), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              social_path(@social),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
