<%= simple_form_for @archive, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :archive_name %>
  <%= f.input :archive_date %>
  <%= f.input :archive_url %>
  <%= f.association :type_archive, include_blank: false %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                archives_path, :class => 'btn btn-default' %>
<% end %>
