<%- model_class = Archive -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:archive_name) %>:</strong></dt>
  <dd><%= @archive.archive_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:archive_date) %>:</strong></dt>
  <dd><%= @archive.archive_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:archive_url) %>:</strong></dt>
  <dd><%= @archive.archive_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_archive_id) %>:</strong></dt>
  <dd><%= @archive.type_archive_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              archives_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_archive_path(@archive), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              archive_path(@archive),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
