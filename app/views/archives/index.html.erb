<%- model_class = Archive -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:archive_name) %></th>
      <th><%= model_class.human_attribute_name(:archive_date) %></th>
      <th><%= model_class.human_attribute_name(:archive_url) %></th>
      <th><%= model_class.human_attribute_name(:type_archive_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= link_to archive.id, archive_path(archive) %></td>
        <td><%= archive.archive_name %></td>
        <td><%= archive.archive_date %></td>
        <td><%= archive.archive_url %></td>
        <td><%= archive.type_archive_id %></td>
        <td><%=l archive.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      archive_path(archive), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_archive_path(archive), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      archive_path(archive),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_archive_path,
            :class => 'btn btn-primary' %>
