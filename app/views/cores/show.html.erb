<%- model_class = Core -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:core_title) %>:</strong></dt>
  <dd><%= @core.core_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:core_description) %>:</strong></dt>
  <dd><%= @core.core_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:archive_id) %>:</strong></dt>
  <dd><%= @core.archive_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menu_id) %>:</strong></dt>
  <dd><%= @core.menu_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @core.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              cores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_core_path(@core), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              core_path(@core),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
