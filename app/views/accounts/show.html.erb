<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:account_fname) %>:</strong></dt>
  <dd><%= @account.account_fname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_lname) %>:</strong></dt>
  <dd><%= @account.account_lname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_departament) %>:</strong></dt>
  <dd><%= @account.account_departament %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ac_email) %>:</strong></dt>
  <dd><%= @account.ac_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ac_password) %>:</strong></dt>
  <dd><%= @account.ac_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:compan_id) %>:</strong></dt>
  <dd><%= @account.compan_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accessp_id) %>:</strong></dt>
  <dd><%= @account.accessp_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
