<%= simple_form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :account_fname %>
  <%= f.input :account_lname %>
  <%= f.input :account_departament %>
  <%= f.input :ac_email %>
  <%= f.input :ac_password %>
  <%= f.association :compan, label_method: :company_name, include_blank: false %>
  <%= f.association :accessp, label_method: :accessp_name, include_blank: false %>

  <%= f.button :submit, :class => "btn-primary" %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                accounts_path, :class => "btn btn-default" %>
<% end %>
