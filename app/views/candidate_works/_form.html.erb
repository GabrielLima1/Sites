<%= simple_form_for @candidade_work, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cwork_fname %>
  <%= f.input :cwork_lname %>
  <%= f.input :cwork_cep %>
  <%= f.input :cwork_state %>
  <%= f.input :cwork_city %>
  <%= f.input :cwork_burgh %>
  <%= f.input :cwork_street %>
  <%= f.input :cwork_num %>
  <%= f.input :cwork_complement %>
  <%= f.input :cwork_gender %>
  <%= f.input :cwork_mail %>
  <%= f.input :cwork_tphone %>
  <%= f.input :cwork_cphone %>
  <%= f.association :work, include_blank: false %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                candidate_works_path, :class => 'btn btn-default' %>
<% end %>
