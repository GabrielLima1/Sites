<%- model_class = Compan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @compan.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_description) %>:</strong></dt>
  <dd><%= @compan.company_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:archive_id) %>:</strong></dt>
  <dd><%= @compan.archive_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fac_contact_id) %>:</strong></dt>
  <dd><%= @compan.fac_contact_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              compans_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_compan_path(@compan), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              compan_path(@compan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
