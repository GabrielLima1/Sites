<%- model_class = SubMenu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:smenu_name) %></th>
      <th><%= model_class.human_attribute_name(:smenu_status) %></th>
      <th><%= model_class.human_attribute_name(:menu_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sub_menus.each do |sub_menu| %>
      <tr>
        <td><%= link_to sub_menu.id, sub_menu_path(sub_menu) %></td>
        <td><%= sub_menu.smenu_name %></td>
        <td><%= sub_menu.smenu_status %></td>
        <td><%= sub_menu.menu_id %></td>
        <td><%=l sub_menu.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      sub_menu_path(sub_menu), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sub_menu_path(sub_menu), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sub_menu_path(sub_menu),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sub_menu_path,
            :class => 'btn btn-primary' %>
