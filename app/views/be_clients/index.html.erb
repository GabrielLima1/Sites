<%- model_class = BeClient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:client_company_name) %></th>
      <th><%= model_class.human_attribute_name(:client_cnpj) %></th>
      <th><%= model_class.human_attribute_name(:client_contact_name) %></th>
      <th><%= model_class.human_attribute_name(:client_mail) %></th>
      <th><%= model_class.human_attribute_name(:client_state) %></th>
      <th><%= model_class.human_attribute_name(:client_city) %></th>
      <th><%= model_class.human_attribute_name(:client_tphone) %></th>
      <th><%= model_class.human_attribute_name(:client_cphone) %></th>
      <th><%= model_class.human_attribute_name(:client_came_to_us) %></th>
      <th><%= model_class.human_attribute_name(:shipping_email_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @be_clients.each do |be_client| %>
      <tr>
        <td><%= link_to be_client.id, be_client_path(be_client) %></td>
        <td><%= be_client.client_company_name %></td>
        <td><%= be_client.client_cnpj %></td>
        <td><%= be_client.client_contact_name %></td>
        <td><%= be_client.client_mail %></td>
        <td><%= be_client.client_state %></td>
        <td><%= be_client.client_city %></td>
        <td><%= be_client.client_tphone %></td>
        <td><%= be_client.client_cphone %></td>
        <td><%= be_client.client_came_to_us %></td>
        <td><%= be_client.shipping_email_id %></td>
        <td><%=l be_client.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      be_client_path(be_client), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_be_client_path(be_client), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      be_client_path(be_client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_be_client_path,
            :class => 'btn btn-primary' %>
